---
const interest = [
  "Pairwise Comparison",
  "Ranking",
  "Algorithm",
  "Graph Theory",
];
---

<div class="flex flex-col space-y-4 pt-4">
  <h2 class="text-xl font-bold">Research Interest</h2>
  <div class="flex flex-col items-center md:flex-row" id="research_interest">
    {
      interest.map((item) => (
        <div class="bg-nepal-100 text-nepal-700 hover:bg-nepal-300 max-w-50 flex h-12 items-center justify-center rounded-full p-3 text-center duration-300">
          {item}
        </div>
      ))
    }
  </div>
</div>
